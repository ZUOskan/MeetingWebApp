<div>
	<h3>Schedule A New Meeting</h3>
</div>

<div class="row">
    <div class="col-md-8">
        @{
            if (TempData["ErrorTemp"]!=null)
            {
                <div class="alert alert-warning" role="alert">
                @TempData["ErrorTemp"]
                </div>
            }
        }
    </div>
</div>

<div class="row">
	<div class="col-lg-8">
        <form asp-controller="Meetings" asp-action="PostMeeting" enctype="multipart/form-data">
            <div class="form-group">
                <label for="MeetingTitle">Title</label>
                <input type="text" class="form-control" id="MeetingTitle" name="MeetingTitle" placeholder="Enter the title" required>
            </div>

            <div class="form-group">
                <label for="MeetingStartDate">Starting Date</label>
                <input type="datetime-local" class="form-control" id="MeetingStartDate" name="MeetingStartDate" placeholder="Enter a starting date" required>
            </div>

            <div class="form-group">
                <label for="MeetingFinishDate">Finishing Date </label>
                <input type="datetime-local" class="form-control" id="MeetingFinishDate" name="MeetingFinishDate" placeholder="Enter a finishing date" required>
            </div>

            <div class="form-group">
                <label for="MeetingDescription">Description</label>
                <input type="text" class="form-control" id="MeetingDescription" name="MeetingDescription" placeholder="Enter a description">
            </div>

            <div class="form-group">
                <label for="MeetingDocument">Document?????</label>
                <input type="file" class="form-control" id="MeetingDocument" name="MeetingDocument" placeholder="Upload related documents">
            </div>       
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
	</div>
</div>