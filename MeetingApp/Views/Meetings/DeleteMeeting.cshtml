@model MeetingApp.BusinessObject.Entity.Meetings;
<div>
    <h3>Are you sure you want to delete the record?</h3>
</div>

<div class="row">
    <div class="col-md-8">
        @{
            if (TempData["ErrorTemp"] != null)
            {
                <div class="alert alert-warning" role="alert">
                    @TempData["ErrorTemp"]
                </div>
            }
        }
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <form asp-controller="Meetings" asp-action="DeleteMeetingConfirmed" asp-route-MeetingID="@Model.MeetingID">
            <div class="form-group">
                <label for="MeetingTitle">Title</label>
                <input type="text" class="form-control" id="MeetingTitle" name="MeetingTitle" value="@Model.MeetingTitle" readonly >
            </div>

            <div class="form-group">
                <label for="MeetingStartDate">Starting Date</label>
                <input type="datetime-local" class="form-control" id="MeetingStartDate" name="MeetingStartDate" value="@Model.MeetingStartDate.ToString("yyyy-MM-ddTHH:mm")" readonly>
            </div>

            <div class="form-group">
                <label for="MeetingFinishDate">Finishing Date </label>
                <input type="datetime-local" class="form-control" id="MeetingFinishDate" name="MeetingFinishDate" value="@Model.MeetingFinishDate.ToString("yyyy-MM-ddTHH:mm")" readonly>
            </div>

            <div class="form-group">
                <label for="MeetingDescription">Description</label>
                <input type="text" class="form-control" id="MeetingDescription" name="MeetingDescription" value="@Model.MeetingDescription" readonly>
            </div>

            <div class="form-group">
                <label for="MeetingDocument">Document</label>
                <input type="file" class="form-control" id="MeetingDocument" name="MeetingDocument" value="@Model.MeetingDocumentName" readonly>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

